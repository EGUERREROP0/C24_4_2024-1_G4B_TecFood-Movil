<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivDish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        <!-- Scaletype para ocupar espacio completo -->


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/nameDish"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvDishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre Super Heroes"
                    android:layout_gravity="center"
                    android:textSize="25dp" />

            <TextView
                    android:id="@+id/tvDishApparence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apariecia"
                    android:layout_gravity="center"
                    android:textSize="25dp" />

            <TextView
                    android:id="@+id/tvDishPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio. $/. 8.00"
                    android:layout_gravity="center"
                    android:textSize="15dp" />

        </LinearLayout>
        <!--<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="button"
            android:background="@color/nameHero"
            >

            <TextView
                android:id="@+id/tvSuperheroAparence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apariecia"
                android:layout_gravity="center"
                android:textSize="30dp"
                />

        </FrameLayout>-->

    </FrameLayout>

</androidx.cardview.widget.CardView>